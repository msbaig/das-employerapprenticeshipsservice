@using SFA.DAS.EAS.Domain
@using SFA.DAS.EAS.Domain.Models.Organisation

@{ 
    ViewBag.PageID = "search-for-organisation";
    ViewBag.Title = "Search for your organisation";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">@ViewBag.Title</h1>
        <form action="@Url.Action("SearchForOrganisation")" method="POST">
            <div class="form-group">
                <label for="searchTerm">
                    <span class="form-label-bold">Enter organisation name</span>
                </label>
                <input type="text" id="searchTerm" name="searchTerm" value="" class="form-control" />
            </div>
            <input class="button" type="submit" value="Search" />
        </form>
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs" id="js-breadcrumbs">
    </div>
}